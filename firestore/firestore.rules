rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ゲームドキュメント
    match /games/{gameId} {
      // 誰でも読み取り可能（公開ゲーム一覧表示のため）
      allow read: if true;
      
      // 新規ゲーム作成は認証済みユーザーのみ可能
      allow create: if request.auth != null;
      
      // 更新はホストまたはゲームに参加しているプレイヤーのみ可能
      allow update: if request.auth != null && (
        // ホストの場合
        resource.data.hostId == request.auth.uid ||
        // ゲーム参加者の場合
        exists(/databases/$(database)/documents/games/$(gameId)) &&
        getAfter(/databases/$(database)/documents/games/$(gameId)).data.players.hasAny([{'id': request.auth.uid}])
      );
      
      // 削除はホストのみ可能
      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }
    
    // その他のコレクションはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
